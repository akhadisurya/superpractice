<p id="notice"><%= notice %></p>

<h1>Listing Sites</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Meta image</th>
      <th>Meta description</th>
      <th>Meta url</th>
      <th>Google site verifcation</th>
      <th>About</th>
      <th>Organization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.title %></td>
        <td><%= site.meta_image %></td>
        <td><%= site.meta_description %></td>
        <td><%= site.meta_url %></td>
        <td><%= site.google_site_verifcation %></td>
        <td><%= site.about %></td>
        <td><%= site.organization_id %></td>
        <td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

